# Denivra Website Environment Variables
# Copy this file to .env and fill in your values

# ========================================
# REQUIRED: Chat Widget (Pivot AI)
# ========================================
# WebSocket URL for Clawdbot gateway
VITE_WS_URL=wss://your-gateway-url

# WebSocket authentication token
VITE_WS_TOKEN=your-websocket-token

# ========================================
# OPTIONAL: HubSpot CRM Integration
# ========================================
# HubSpot portal ID (numeric)
VITE_HUBSPOT_PORTAL_ID=

# HubSpot form ID (for contact form)
VITE_HUBSPOT_FORM_ID=

# HubSpot API key (server-side only, no VITE_ prefix)
HUBSPOT_API_KEY=

# ========================================
# OPTIONAL: Contact Information
# ========================================
VITE_PHONE=+13478030812
VITE_EMAIL=info@denivra.com
VITE_CALENDLY=https://calendly.com/bsa-denivra/30min

# ========================================
# OPTIONAL: Bland AI Voice Integration
# ========================================
VITE_BLAND_AI_PHONE=

# ========================================
# SERVER-SIDE ONLY (Netlify Functions)
# ========================================
# Clawdbot webhook for contact form notifications
CLAWDBOT_CONTACT_WEBHOOK=

# Notification email
NOTIFICATION_EMAIL=info@denivra.com

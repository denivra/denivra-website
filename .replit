run = "npm run dev -- --host 0.0.0.0"
entrypoint = "src/App.tsx"
modules = ["nodejs-20", "python-3.12", "web"]

[nix]
channel = "stable-25_05"
packages = ["unzip"]

[deployment]
run = ["sh", "-c", "npm run build && npx vite preview --host 0.0.0.0 --port 3000"]
deploymentTarget = "cloudrun"
ignorePorts = false
publicDir = "dist/public"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
